{{ form_start(form) }}
<div class="container">
    <div class=" g-5">    
      <div class="col-md-10 ">
        <h4 class="mb-3">Commenter</h4>
        <form class="needs-validation" novalidate>
          <div class=" g-3">
            <div class=" mb-3">
                  {{ form_row(form.titre, {'attr': {'class': 'form-control', 'placeholder' : 'Titre du commentaire'}}) }}
            </div>
            <div class=" mb-3">
                {{ form_row(form.contenu, {'attr': {'class': 'form-control', 'placeholder' : 'Contenu du commentaire'}}) }}
            </div>
          <button class="col-3 btn btn-primary btn-lg" type="submit">Publier le commentaire</button>
        </form>
      </div>
    </div>
 </div>

    
{{ form_end(form) }}
